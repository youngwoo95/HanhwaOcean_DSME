<style>
  
    .container_right_title {
        width: 100%;
        height: 200px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .container_right_content {
        width: 100%;
        height: calc(100vh - 200px);
        overflow: scroll;
    }

    .container_table {
        width: 100%;
        border-collapse: collapse;
        overflow: scroll;
    }

    .table_header {
        position: sticky;
        top: 0;
        background-color: #232323;
        color: white;
        height: 50px;
    }

    .table_body {
        height: 35px;
        text-align: center;
    }

        .table_body:hover {
            background-color: cadetblue;
        }

    tbody tr:nth-child(2n + 1) {
        background-color: aliceblue;
    }

    tbody tr:nth-child(2n) {
        background-color: #9cb5b8;
    }
</style>


<div class="container_right_title">
    <p style="text-align:center; margin-bottom:10px; font-weight:500; font-size:28px">로고</p>
    <div class="in-line">
        <input type="text" placeholder="경로를 입력해주세요."/>
        <button>선택</button>
    </div>
</div>

<div class="container_right_content">
    <table class="container_table">
    <thead>
        <tr class="table_header">
            <th>헤더1</th>
            <th>헤더2</th>
            <th>헤더3</th>
        </tr>
    </thead>
    <tbody>
        @for(int i=0;i<5;i++){
            <tr class="table_body">
                <td>행1열1 </td>
                <td>행1열2</td>
                <td>행1열3</td>
            </tr>
        }
    </tbody>
    </table>
</div>


